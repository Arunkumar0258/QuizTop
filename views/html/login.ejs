<% layout('boilerplate') %>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-8 col-sm-offset-2 col-md-offset-2 well">
            <form action="/login" method="post" role="form">
                <div class="formhead"> Login </div>
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger text-center" role="alert">
                        <span aria-hidden="true"> </span>
                        <strong> Warning! </strong>
                        <%= message %>
                    </div>
                <% } %>
                <div class="form-group">
                    <label for="username"> Username </label>
                    <input type="text" class="form-control input-lg" id="lusername" name="username" placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label for="pass"> Password </label>
                    <input type="text" class="form-control input-lg" id="lpass" name="password" placeholder="Enter password">
                </div>
                <div class="button">
                    <button class="btn btn-default"> Submit </button>
                </div>
            </form>
        </div>
    </div>
</div>
